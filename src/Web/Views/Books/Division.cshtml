




@{
    ViewData["Title"] = "Calculate";
}

<h1>Calculate Division</h1>


<body>
    NUM1 = <input type="text" id="input1" name="value1" />
    NUM2 = <input type="text" id="input2" name="value2" />
    <input type="button" name="Sumbit" value="Calculate" onclick="javascript:Division()" />
    Result = <input type="text" id="answer" name="answer" />
</body>



<script language="javascript">
    function Division() {
        var num1 = parseInt(document.getElementById("input1").value);
        var num2 = parseInt(document.getElementById("input2").value);
        var answer = document.getElementById("answer");
        answer.value = num1 / num2;
    }
</script>